<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/mine_icon_message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/mine_message_bg"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_login_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <RelativeLayout
                    android:id="@+id/mine_pic_bg"
                    android:layout_width="wrap_content"
                    android:background="@drawable/user_defaul_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/mine_pic_iv"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_default"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_pic_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#894009"
                        android:textStyle="bold"
                        android:text="填写你的信息"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#80403E3B"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:text="测算避免二次填写，定制个人运势"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_login_login_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <RelativeLayout
                    android:id="@+id/mine_login_login_rl"
                    android:layout_width="wrap_content"
                    android:background="@drawable/user_defaul_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/user_admin"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/mine_login_login_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_login_login_rl"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/mine_login_login_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#403E3B"
                        android:textStyle="bold"
                        android:text="姓名"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mine_login_login_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#70403E3B"
                            android:text="1995.04.18"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/mine_login_login_qiehuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#403E3B"
                            android:layout_marginLeft="11dp"
                            android:text="切换"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_order_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="14dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mine_order_right" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/mine_icon_luopan" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/version_cache_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:id="@+id/version_cache_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:textColor="#915222"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/version_cache_tv"
                    android:layout_marginTop="5dp"
                    android:text="清除应用冗余信息"
                    android:textColor="#7D7973"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/mine_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/version_version_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:id="@+id/version_version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本说明与协议"
                    android:textColor="#915222"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/version_version_tv"
                    android:layout_marginTop="5dp"
                    android:text="版本说明与用户协议"
                    android:textColor="#7D7973"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/mine_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/version_kefu_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:id="@+id/version_kefu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系客服"
                    android:textColor="#915222"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/version_kefu_tv"
                    android:layout_marginTop="5dp"
                    android:text="说出你的问题"
                    android:textColor="#7D7973"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/mine_more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/version_evaluate_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:id="@+id/version_evaluate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价应用"
                    android:textColor="#915222"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/version_evaluate_tv"
                    android:layout_marginTop="5dp"
                    android:text="给予我们应用评价"
                    android:textColor="#7D7973"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/mine_more" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>