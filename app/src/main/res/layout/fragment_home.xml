<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_content">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/home_bj"/>

            <LinearLayout
                android:id="@+id/home_data_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#403E3B"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_below="@+id/login_title_back"
                    android:textStyle="bold"
                    android:text="灵算大师"/>

                <RelativeLayout
                    android:id="@+id/home_login_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <RelativeLayout
                        android:id="@+id/mine_pic_bg"
                        android:layout_width="wrap_content"
                        android:background="@drawable/user_defaul_bg"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/mine_pic_iv"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/icon_default"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mine_pic_bg"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#894009"
                            android:textStyle="bold"
                            android:text="填写你的信息"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#80403E3B"
                            android:layout_marginTop="5dp"
                            android:textSize="14sp"
                            android:text="测算避免二次填写，定制个人运势"/>
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/home_login_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/home_informationbutton"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:id="@+id/home_login_login_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/home_login_login_rl"
                            android:layout_width="wrap_content"
                            android:background="@drawable/user_defaul_bg"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/user_admin"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/home_login_login_rl"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="18dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/home_login_login_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_login_login_birthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#70403E3B"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/home_login_login_qiehuan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#403E3B"
                                    android:layout_marginLeft="11dp"
                                    android:text="切换"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/home_login_yunshi"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/home_yunhsi"/>
                        <ImageView
                            android:id="@+id/home_login_mingpan"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/home_mingpan"/>
                    </LinearLayout>

                </LinearLayout>

                <com.ling.suandashi.view.WrapContentHeightViewPager
                    android:id="@+id/home_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>
                <LinearLayout
                    android:id="@+id/home_viewpager_point_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/home_date_bg">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">
                        <TextView
                            android:id="@+id/home_date_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#403E3B"
                            android:textSize="40sp"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/home_date_day"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/home_date_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/home_date_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center"
                                android:textColor="#403E3B"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#A55E48"
                                android:textSize="13sp"
                                android:text="黄历农历"/>
                            <TextView
                                android:id="@+id/home_date_nongli"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="#A55E48"
                                android:layout_gravity="center"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="15dp"
                        android:background="#A55E48"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:background="@drawable/home_yi_out_bg">
                                <TextView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:text="宜"
                                    android:textSize="13sp"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:background="@drawable/home_yi_bg"
                                    android:textColor="#FFFFFF"/>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/home_yi_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:textColor="#90403E3B"
                                android:lineSpacingMultiplier="1.2"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:background="@drawable/home_ji_out_bg">
                                <TextView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:text="忌"
                                    android:textSize="13sp"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:background="@drawable/home_ji_bg"
                                    android:textColor="#FFFFFF"/>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/home_ji_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:textColor="#90403E3B"
                                android:lineSpacingMultiplier="1.2"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/home_ai_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="14dp"
                    android:gravity="center"
                    android:layout_marginRight="14dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#403E3B"
                        android:textSize="17sp"
                        android:text="星座运势"/>
                    <TextView
                        android:id="@+id/home_xingzuo_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#7D7973"
                        android:textSize="14sp"
                        android:text="查看更多"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/home_xingzuo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@mipmap/icon_sheep"
                    android:textColor="#403E3B"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textSize="14sp"
                                android:text="综合运势："/>
                            <com.ling.suandashi.view.RatingBar
                                android:id="@+id/home_yunshi_start_zh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:clickable="false"
                                app:starCount="5"
                                app:starEmpty="@mipmap/home_star_admin"
                                app:starFill="@mipmap/xingzuo_star"
                                app:starHalf="@mipmap/home_star_admin"
                                app:starImageSize="20dp"
                                app:starPadding="1dp"
                                app:stepSize="Full" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textSize="14sp"
                                android:text="工作运势："/>
                            <com.ling.suandashi.view.RatingBar
                                android:id="@+id/home_yunshi_start_gz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:clickable="false"
                                app:starCount="5"
                                app:starEmpty="@mipmap/home_star_admin"
                                app:starFill="@mipmap/xingzuo_star"
                                app:starHalf="@mipmap/home_star_admin"
                                app:starImageSize="20dp"
                                app:starPadding="1dp"
                                app:stepSize="Full" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textSize="14sp"
                                android:text="爱情运势："/>
                            <com.ling.suandashi.view.RatingBar
                                android:id="@+id/home_yunshi_start_aq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:clickable="false"
                                app:starCount="5"
                                app:starEmpty="@mipmap/home_star_admin"
                                app:starFill="@mipmap/xingzuo_star"
                                app:starHalf="@mipmap/home_star_admin"
                                app:starImageSize="20dp"
                                app:starPadding="1dp"
                                app:stepSize="Full" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textSize="14sp"
                                android:text="理财运势："/>
                            <com.ling.suandashi.view.RatingBar
                                android:id="@+id/home_yunshi_start_lc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:clickable="false"
                                app:starCount="5"
                                app:starEmpty="@mipmap/home_star_admin"
                                app:starFill="@mipmap/xingzuo_star"
                                app:starHalf="@mipmap/home_star_admin"
                                app:starImageSize="20dp"
                                app:starPadding="1dp"
                                app:stepSize="Full" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textSize="14sp"
                                android:text="贵人星座："/>
                            <TextView
                                android:id="@+id/home_yunshi_tv_xz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFA24A"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textSize="14sp"
                                android:text="幸运颜色："/>
                            <TextView
                                android:id="@+id/home_yunshi_tv_ys"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFA24A"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#403E3B"
                                android:textSize="14sp"
                                android:text="幸运数字："/>
                            <TextView
                                android:id="@+id/home_yunshi_tv_sz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFA24A"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="整体运势"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="25dp"
                    android:drawableLeft="@mipmap/home_icon_yunshiorange"
                    android:textColor="#403E3B"/>

                <TextView
                    android:id="@+id/home_yunshi_tv_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="28dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#90403E3B"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:alpha="0"
        android:background="@drawable/backgroud_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7A3401"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:text="灵算大师"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_no_internet_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/home_no_internet_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text="暂无网络"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableTop="@mipmap/default_nointernet"
            android:drawablePadding="8dp"/>
        <ImageView
            android:layout_below="@+id/home_no_internet_tv"
            android:id="@+id/home_no_internet_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/button_refreshing"/>
    </RelativeLayout>
</RelativeLayout>